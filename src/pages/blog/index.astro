---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<!-- Inter font for calm editorial typography -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
		<style>
			/* Layout width consistent with site */
			main {
				max-width: 720px;
				margin: 0 auto;
				padding: 1rem;
				box-sizing: border-box;
			}
			/* Two-column grid (text-only cards) */
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 1.5rem 2rem;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				padding: 1.25rem 0;
				box-sizing: border-box;
			}
			/* Keep links text-only and editorial */
			ul li a {
				display: block;
				color: inherit;
				text-decoration: none;
			}
			.title {
				margin: 0 0 0.4rem 0;
				font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
				font-weight: 600;
				font-size: 1.05rem;
				color: rgb(var(--black));
				line-height: 1.15;
			}
			.date {
				margin: 0;
				color: rgba(var(--gray-dark), 0.6);
				font-size: 0.95rem;
				font-weight: 300;
			}
			/* Hover: minimal underline on title, subtle darker date - no animations */
			ul li a:hover .title { text-decoration: underline; }
			ul li a:hover .date { color: rgba(var(--gray-dark), 0.75); }
			/* Style preview images: soft corners, no shadows, shallow height like editorial sites */
			img.image.image--cover {
				display: block;
				width: 100%;
				max-height: 180px;
				object-fit: cover;
				object-position: center;
				border-radius: 10px;
				margin-bottom: 0.6rem;
				box-shadow: none;
			}
			@media (max-width: 720px) {
				ul { gap: 0.75rem; }
				ul li { width: 100%; }
				ul li { text-align: left; }
				main { padding: 0.75rem; }

				/* Mobile: make images scale to their column width and avoid cropping/overflow */
				img.image.image--cover {
					width: 100%;
					max-width: 100%;
					height: auto;
					max-height: none;
					object-fit: unset;
				}

				/* Ensure the list and main don't cause horizontal overflow */
				ul, main { box-sizing: border-box; }
				body { overflow-x: hidden; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image class="image image--cover" width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
