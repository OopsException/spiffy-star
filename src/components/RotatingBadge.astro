<div class="rot-badge" aria-hidden="false" aria-label="Brand badge">
  <a class="rot-badge__link" href="#" title="Brand">
    <div class="rot-badge__card" role="img" aria-hidden="true">
      <div class="rot-badge__face rot-badge__face--front">B</div>
      <div class="rot-badge__face rot-badge__face--back">B</div>
    </div>
  </a>
</div>

<style>
/* RotatingBadge component - scoped styles
   - Progressive enhancement: old browsers see a static 'B'
   - Uses transform-style, backface-visibility, perspective when supported
*/
.rot-badge {
  --size: 48px;
  --gap: 40px;
  --duration: 3s;
  --color: var(--accent);
  --bg: var(--panel);
  --glow-1: 0 0 6px rgba(var(--accent-rgb),0.95);
  --glow-2: 0 0 18px rgba(var(--accent-rgb),0.6);

  position: fixed;
  right: var(--gap);
  bottom: var(--gap);
  width: var(--size);
  height: var(--size);
  z-index: 9999;
  perspective: none; /* enabled in @supports */
  -webkit-tap-highlight-color: transparent;
}

.rot-badge__link {
  display: block;
  width: 100%;
  height: 100%;
  cursor: pointer;
  text-decoration: none;
}

.rot-badge__card {
  width: 100%;
  height: 100%;
  position: relative;
  transform: none;
  transform-style: flat;
  transform-origin: 50% 50%;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg);
  box-shadow: 0 6px 18px rgba(0,0,0,0.6), 0 0 10px rgba(var(--accent-rgb),0.04) inset;
}

.rot-badge__face {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-weight: 800;
  font-size: calc(var(--size) * 0.62);
  color: var(--color);
  border-radius: inherit;
  -webkit-font-smoothing: antialiased;
  user-select: none;
  text-shadow: var(--glow-1), var(--glow-2);
  backface-visibility: visible; /* fallback */
  -webkit-backface-visibility: visible;
}

.rot-badge__face--back { display: none; }

/* Progressive enhancement: enable 3D spinning when supported */
@supports (transform-style: preserve-3d) and (backface-visibility: hidden) {
  .rot-badge { perspective: 700px; }
  .rot-badge__card {
    transform-style: preserve-3d;
    animation: rotBadgeSpin var(--duration) linear infinite;
    will-change: transform;
    background: transparent;
  }

  .rot-badge__face {
    background: var(--bg);
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    display: flex;
  }

  /* Back face: rotated 180deg on X so 'B' reads normally when back is visible */
  .rot-badge__face--back {
    transform: rotateX(180deg);
    display: flex;
  }

  @keyframes rotBadgeSpin {
    from { transform: rotateX(0deg); }
    to   { transform: rotateX(360deg); }
  }

  @media (prefers-reduced-motion: reduce) {
    .rot-badge__card { animation: none !important; transform: rotateX(0deg) !important; }
  }
}

/* hide on print */
@media print { .rot-badge { display: none; } }
</style>
