<style>
  /* Use global color variables (defined in src/styles/global.css) */

  .donate-container{
    padding: 36px 0;
    color: var(--text-85);
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  }
  .donate-container > h2{
    margin: 0 0 18px 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-85);
  }

  .donate-list{
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.75rem; /* increased spacing for more breathing room */
    align-items: start;
  }

  /* Desktop: two columns */
  @media (min-width: 720px){
    .donate-list{ grid-template-columns: repeat(2, 1fr); }
  }

  .card{
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    align-items: center;
    background: linear-gradient(180deg, var(--panel), var(--panel-alt));
    backdrop-filter: blur(4px);
    border-radius: 12px;
    padding: 14px;
    border: 1px solid var(--border);
    transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
    position: relative;
    cursor: pointer;
    will-change: transform, box-shadow, border-color;
  }

  .card:hover{
    transform: translateY(-6px);
    box-shadow: var(--box-shadow);
    border-color: rgba(var(--accent-rgb),0.12);
  }

  /* Click-to-copy feedback */
  .card.copied{
    border-color: var(--accent);
    transform: translateY(-6px) scale(1.02);
    box-shadow: var(--box-shadow), 0 8px 24px rgba(var(--accent-rgb), 0.06);
  }
  .card.copied::after{
    content: 'Copied!';
    position: absolute;
    right: 12px;
    top: 12px;
    background: var(--accent);
    color: var(--panel);
    padding: 6px 8px;
    border-radius: 8px;
    font-size: 0.85rem;
    opacity: 1;
    animation: copied-fade 1100ms forwards;
    pointer-events: none;
  }
  @keyframes copied-fade{
    0% { opacity: 1; transform: translateY(0); }
    70% { opacity: 1; transform: translateY(-6px); }
    100% { opacity: 0; transform: translateY(-12px); }
  }

  .card-info{
    flex: 1 1 auto;
    min-width: 0;
  }
  .card h3{
    margin: 0 0 8px 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-85);
  }

  .addr{
    display: block;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Segoe UI Mono", "Courier New", monospace;
    font-size: 0.95rem;
    color: var(--text-muted);
    word-break: break-all;
    background: transparent;
    padding: 6px 8px;
    border-radius: 8px;
  }
  .addr.inline{ display: inline; padding: 0; border-radius: 0; }

  /* Wallet action buttons under each card */
  .wallet-actions{
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
    margin-top: 0.75rem;
    grid-column: 1 / -1;
  }
  .wallet-btn{
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--panel);
    color: var(--text);
    border: 1px solid var(--border);
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 140ms ease, box-shadow 140ms ease, border-color 140ms ease;
  }
  .wallet-btn:hover,
  .wallet-btn:focus{
    border-color: var(--accent);
    box-shadow: 0 6px 18px rgba(0,0,0,0.45), 0 0 8px rgba(var(--accent-rgb),0.06);
    transform: translateY(-2px);
  }
  .wallet-btn:active{ transform: translateY(0); }
  .wallet-name{ color: var(--text); }

  @media (min-width: 720px){
    .wallet-actions{ display: flex; gap: 0.75rem; }
    .wallet-actions .wallet-btn{ flex: 1 1 0; }
  }

  .qr{
    width: 160px;
    height: 160px;
    object-fit: contain;
    border-radius: 8px;
    background: transparent;
    box-shadow: none;
  }

  /* USDC card spans full width on larger screens for clarity */
  .card-usdc{ grid-column: 1 / -1; }
  @media (min-width:720px){ .card-usdc{ grid-column: span 2; } }

  /* Small tweaks for mobile */
  @media (max-width: 540px){
    .card{ padding: 12px; gap: 12px; }
    .donate-list{ gap: 1.25rem; }
    .qr{ width: 140px; height: 140px; }
  }

  /* reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce){
    .card, .card:hover{ transform: none; transition: none; }
  }

  /* small accessibility focus style */
  .card:focus{
    outline: 2px solid rgba(var(--accent-rgb),0.18);
    outline-offset: 2px;
  }

</style>

<script>
// @ts-nocheck
// Click-to-copy donation addresses with visual feedback
;(function(){
  const list = document.querySelector('.donate-list');
  if(!list) return;

  /** @param {HTMLElement} card */
  function activateCard(card){
    if(!card) return;
    const address = card.dataset.address;
    if(!address) return;
    // copy
    if(navigator.clipboard && navigator.clipboard.writeText){
      navigator.clipboard.writeText(address).catch(()=>{});
    } else {
      // fallback
      const ta = document.createElement('textarea');
      ta.value = address;
      ta.setAttribute('readonly','');
      ta.style.position = 'absolute';
      ta.style.left = '-9999px';
      document.body.appendChild(ta);
      ta.select();
      try{ document.execCommand('copy'); }catch(e){}
      ta.remove();
    }

    // visual feedback
    card.classList.add('copied');
    setTimeout(()=> card.classList.remove('copied'), 1100);
  }

  list.addEventListener('click', (ev)=>{
    const e = /** @type {Event} */ (ev);
    const tgt = e.target;
    if(!(tgt instanceof Element)) return;
    const card = tgt.closest('.card');
    if(!(card instanceof HTMLElement)) return;
    activateCard(card);
  });

  // keyboard support: Enter / Space to copy
  list.addEventListener('keydown', (ev)=>{
    const e = /** @type {KeyboardEvent} */ (ev);
    if(e.key !== 'Enter' && e.key !== ' ') return;
    const tgt = e.target;
    if(!(tgt instanceof Element)) return;
    const card = tgt.closest('.card');
    if(!(card instanceof HTMLElement)) return;
    e.preventDefault();
    activateCard(card);
  });
})();
</script>
