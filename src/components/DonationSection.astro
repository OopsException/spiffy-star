---
import { SOL, ETH, BTC, MATIC, USDC_SOL, USDC_ETH, USDC_POLY } from '../consts';
import qrSol from '../assets/Solana-qr-code.jpeg';
import qrEth from '../assets/Eth-qr-code.jpeg';
import qrBtc from '../assets/Bitcome-qr-cde.jpeg';
import qrMatic from '../assets/Polygon-qr-code.jpeg';
---

<section class="donate-container" aria-labelledby="donate-heading">
  <h2 id="donate-heading">Support the Project — Crypto Donations</h2>

  <div class="donate-list">

    <div class="card" data-address={SOL} role="button" tabindex="0">
      <div class="card-info">
        <h3>Solana (SOL)</h3>
        <p class="addr">{SOL}</p>
      </div>
      <img class="qr" src={qrSol.src} alt="SOL QR" width="160" height="160" />
    </div>

    <div class="card" data-address={ETH} role="button" tabindex="0">
      <div class="card-info">
        <h3>Ethereum (ETH)</h3>
        <p class="addr">{ETH}</p>
      </div>
      <img class="qr" src={qrEth.src} alt="ETH QR" width="160" height="160" />
    </div>

    <div class="card" data-address={BTC} role="button" tabindex="0">
      <div class="card-info">
        <h3>Bitcoin (BTC)</h3>
        <p class="addr">{BTC}</p>
      </div>
      <img class="qr" src={qrBtc.src} alt="BTC QR" width="160" height="160" />
    </div>

    <div class="card" data-address={MATIC} role="button" tabindex="0">
      <div class="card-info">
        <h3>Polygon (MATIC)</h3>
        <p class="addr">{MATIC}</p>
      </div>
      <img class="qr" src={qrMatic.src} alt="MATIC QR" width="160" height="160" />
    </div>

    <div class="card" data-address={USDC_SOL} role="button" tabindex="0">
      <div class="card-info">
        <h3>USDC — Solana (SPL)</h3>
        <p class="addr">{USDC_SOL}</p>
      </div>
    </div>

    <div class="card" data-address={USDC_ETH} role="button" tabindex="0">
      <div class="card-info">
        <h3>USDC — Ethereum (ERC-20)</h3>
        <p class="addr">{USDC_ETH}</p>
      </div>
    </div>

    <div class="card" data-address={USDC_POLY} role="button" tabindex="0">
      <div class="card-info">
        <h3>USDC — Polygon</h3>
        <p class="addr">{USDC_POLY}</p>
      </div>
    </div>

  </div>
</section>

<style>
  /* Use global color variables (defined in src/styles/global.css) */

  .donate-container{
    padding: 36px 0;
    color: var(--text-85);
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  }
  .donate-container > h2{
    margin: 0 0 18px 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-85);
  }

  .donate-list{
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.75rem; /* increased spacing for more breathing room */
    align-items: start;
  }

  /* Desktop: two columns */
  @media (min-width: 720px){
    .donate-list{ grid-template-columns: repeat(2, 1fr); }
  }

  .card{
    display: flex;
    align-items: center;
    gap: 1rem;
    background: linear-gradient(180deg, var(--panel), var(--panel-alt));
    backdrop-filter: blur(4px);
    border-radius: 12px;
    padding: 14px;
    border: 1px solid var(--border);
    transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
    position: relative;
    cursor: pointer;
    will-change: transform, box-shadow, border-color;
  }

  .card:hover{
    transform: translateY(-6px);
    box-shadow: var(--box-shadow);
    border-color: rgba(var(--accent-rgb),0.12);
  }

  /* Click-to-copy feedback */
  .card.copied{
    border-color: var(--accent);
    transform: translateY(-6px) scale(1.02);
    box-shadow: var(--box-shadow), 0 8px 24px rgba(var(--accent-rgb), 0.06);
  }
  .card.copied::after{
    content: 'Copied!';
    position: absolute;
    right: 12px;
    top: 12px;
    background: var(--accent);
    color: var(--panel);
    padding: 6px 8px;
    border-radius: 8px;
    font-size: 0.85rem;
    opacity: 1;
    animation: copied-fade 1100ms forwards;
    pointer-events: none;
  }
  @keyframes copied-fade{
    0% { opacity: 1; transform: translateY(0); }
    70% { opacity: 1; transform: translateY(-6px); }
    100% { opacity: 0; transform: translateY(-12px); }
  }

  .card-info{
    flex: 1 1 auto;
    min-width: 0;
  }
  .card h3{
    margin: 0 0 8px 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-85);
  }

  .addr{
    display: block;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Segoe UI Mono", "Courier New", monospace;
    font-size: 0.95rem;
    color: var(--text-muted);
    word-break: break-all;
    background: transparent;
    padding: 6px 8px;
    border-radius: 8px;
  }
  .addr.inline{ display: inline; padding: 0; border-radius: 0; }

  .qr{
    width: 160px;
    height: 160px;
    object-fit: contain;
    border-radius: 8px;
    background: transparent;
    box-shadow: none;
  }

  /* USDC card spans full width on larger screens for clarity */
  .card-usdc{ grid-column: 1 / -1; }
  @media (min-width:720px){ .card-usdc{ grid-column: span 2; } }

  /* Small tweaks for mobile */
  @media (max-width: 540px){
    .card{ padding: 12px; gap: 12px; }
    .donate-list{ gap: 1.25rem; }
    .qr{ width: 140px; height: 140px; }
  }

  /* reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce){
    .card, .card:hover{ transform: none; transition: none; }
  }

  /* small accessibility focus style */
  .card:focus{
    outline: 2px solid rgba(var(--accent-rgb),0.18);
    outline-offset: 2px;
  }

</style>

<script>
// @ts-nocheck
// Click-to-copy donation addresses with visual feedback
;(function(){
  const list = document.querySelector('.donate-list');
  if(!list) return;

  /** @param {HTMLElement} card */
  function activateCard(card){
    if(!card) return;
    const address = card.dataset.address;
    if(!address) return;
    // copy
    if(navigator.clipboard && navigator.clipboard.writeText){
      navigator.clipboard.writeText(address).catch(()=>{});
    } else {
      // fallback
      const ta = document.createElement('textarea');
      ta.value = address;
      ta.setAttribute('readonly','');
      ta.style.position = 'absolute';
      ta.style.left = '-9999px';
      document.body.appendChild(ta);
      ta.select();
      try{ document.execCommand('copy'); }catch(e){}
      ta.remove();
    }

    // visual feedback
    card.classList.add('copied');
    setTimeout(()=> card.classList.remove('copied'), 1100);
  }

  list.addEventListener('click', (ev)=>{
    const e = /** @type {Event} */ (ev);
    const tgt = e.target;
    if(!(tgt instanceof Element)) return;
    const card = tgt.closest('.card');
    if(!(card instanceof HTMLElement)) return;
    activateCard(card);
  });

  // keyboard support: Enter / Space to copy
  list.addEventListener('keydown', (ev)=>{
    const e = /** @type {KeyboardEvent} */ (ev);
    if(e.key !== 'Enter' && e.key !== ' ') return;
    const tgt = e.target;
    if(!(tgt instanceof Element)) return;
    const card = tgt.closest('.card');
    if(!(card instanceof HTMLElement)) return;
    e.preventDefault();
    activateCard(card);
  });
})();
</script>
