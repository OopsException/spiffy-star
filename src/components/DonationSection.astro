---
const SOL = "9Kr8AZqdbyvLaR4845QUoRhij37JCVHTVjS8UGe8zY85";
const ETH = "0xE3340a5C13Bff84E0407E5add572418556fdd94f";
const BTC = "bc1q4yj292gxx83hv6w3nl4syxeq4kh0rp3a6nxxx8";
const MATIC = "0xE3340a5C13Bff84E0407E5add572418556fdd94f";
const USDC_SOL = "9Kr8AZqdbyvLaR4845QUoRhij37JCVHTVjS8UGe8zY85";
const USDC_ETH = "0xE3340a5C13Bff84E0407E5add572418556fdd94f";
const USDC_POLY = "0xE3340a5C13Bff84E0407E5add572418556fdd94f";
import qrSol from '../assets/Solana-qr-code.jpeg';
import qrEth from '../assets/Eth-qr-code.jpeg';
import qrBtc from '../assets/Bitcome-qr-cde.jpeg';
import qrMatic from '../assets/Polygon-qr-code.jpeg';
---

<section class="donate-container" aria-labelledby="donate-heading">
  <h2 id="donate-heading">Support the Project â€” Crypto Donations</h2>

  <div class="donate-list">

    <div class="card">
      <div class="card-info">
        <h3>Solana (SOL)</h3>
        <p class="addr">{SOL}</p>
      </div>
      <img class="qr" src={qrSol.src} alt="SOL QR" width="160" height="160" />
    </div>

    <div class="card">
      <div class="card-info">
        <h3>Ethereum (ETH)</h3>
        <p class="addr">{ETH}</p>
      </div>
      <img class="qr" src={qrEth.src} alt="ETH QR" width="160" height="160" />
    </div>

    <div class="card">
      <div class="card-info">
        <h3>Bitcoin (BTC)</h3>
        <p class="addr">{BTC}</p>
      </div>
      <img class="qr" src={qrBtc.src} alt="BTC QR" width="160" height="160" />
    </div>

    <div class="card">
      <div class="card-info">
        <h3>Polygon (MATIC)</h3>
        <p class="addr">{MATIC}</p>
      </div>
      <img class="qr" src={qrMatic.src} alt="MATIC QR" width="160" height="160" />
    </div>

    <div class="card card-usdc">
      <div class="card-info">
        <h3>USDC (Stablecoin)</h3>
        <p><b>SOL (SPL):</b> <span class="addr inline">{USDC_SOL}</span></p>
        <p><b>ETH (ERC20):</b> <span class="addr inline">{USDC_ETH}</span></p>
        <p><b>Polygon:</b> <span class="addr inline">{USDC_POLY}</span></p>
      </div>
    </div>

  </div>
</section>

<style>
  /* Use global color variables (defined in src/styles/global.css) */

  .donate-container{
    padding: 36px 0;
    color: var(--text);
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  }
  .donate-container > h2{
    margin: 0 0 18px 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
  }

  .donate-list{
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--gap);
    align-items: start;
  }

  /* Desktop: two columns */
  @media (min-width: 720px){
    .donate-list{ grid-template-columns: repeat(2, 1fr); }
  }

  .card{
    display: flex;
    align-items: center;
    gap: 1rem;
    background: linear-gradient(180deg, var(--panel), var(--panel-alt));
    backdrop-filter: blur(4px);
    border-radius: 12px;
    padding: 14px;
    border: 1px solid var(--border);
    transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
  }

  .card:hover{
    transform: translateY(-6px);
    box-shadow: var(--box-shadow);
    border-color: rgba(var(--accent-rgb),0.12);
  }

  .card-info{
    flex: 1 1 auto;
    min-width: 0;
  }
  .card h3{
    margin: 0 0 8px 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
  }

  .addr{
    display: block;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Segoe UI Mono", "Courier New", monospace;
    font-size: 0.95rem;
    color: var(--text-muted);
    word-break: break-all;
    background: transparent;
    padding: 6px 8px;
    border-radius: 8px;
  }
  .addr.inline{ display: inline; padding: 0; border-radius: 0; }

  .qr{
    width: 160px;
    height: 160px;
    object-fit: contain;
    border-radius: 8px;
    background: transparent;
    box-shadow: none;
  }

  /* USDC card spans full width on larger screens for clarity */
  .card-usdc{ grid-column: 1 / -1; }
  @media (min-width:720px){ .card-usdc{ grid-column: span 2; } }

  /* Small tweaks for mobile */
  @media (max-width: 540px){
    .card{ padding: 12px; gap: 12px; }
    .qr{ width: 140px; height: 140px; }
  }

  /* reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce){
    .card, .card:hover{ transform: none; transition: none; }
  }

</style>
