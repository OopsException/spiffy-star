---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0.5rem 1rem;
		background: white;
	}
	h2 {
		margin: 0;
		font-size: 1.05rem;
		font-weight: 600;
		letter-spacing: 0.02em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		flex-wrap: wrap;
	}
	.internal-links {
		display: flex;
		gap: 0.75rem;
		align-items: center;
		justify-content: flex-end;
		flex: 1 1 auto;
	}
	nav a {
		padding: 0.4rem 0.6rem;
		color: var(--black);
		text-decoration: none;
		position: relative;
		font-size: 0.98rem;
	}
	nav a::after {
		content: '';
		position: absolute;
		left: 0;
		bottom: -2px;
		height: 2px;
		width: 0;
		background: var(--accent);
		opacity: 0.9;
		transition: width 180ms ease;
	}
	nav a:hover::after,
	nav a.active::after {
		width: 100%;
	}

	@media (max-width: 720px) {
		nav {
			/* reduce horizontal padding and gaps to fit on one line */
			padding: 0.35rem 0.5rem;
			gap: 0.5rem;
			flex-wrap: nowrap;
		}
		.internal-links {
			order: 0;
			width: auto;
			justify-content: flex-end;
			gap: 0.4rem;
			margin-top: 0;
			flex: 0 1 auto;
		}
		h2 {
			order: 0;
			width: auto;
			font-size: 0.9rem;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			margin-right: 0.5rem;
		}
		nav a {
			padding: 0.35rem 0.35rem;
			font-size: 0.9rem;
			white-space: nowrap;
		}
	}
</style>