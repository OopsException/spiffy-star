---
const today = new Date();
import MinimalRotatingB from './MinimalRotatingB.astro';
---

<footer>
 	<div class="footer-inner">
 		<div class="footer-links">
 			<a href="https://instagram.com/" target="_blank" rel="noopener" aria-label="Instagram">
 				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
 					<rect x="2" y="2" width="20" height="20" rx="5" />
 					<circle cx="12" cy="12" r="3.2" />
 					<circle cx="17.5" cy="6.5" r="0.5" />
 				</svg>
 			</a>
 			<a href="#" rel="noopener" aria-label="WhatsApp">
 				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
 					<path d="M21 11.5a8.38 8.38 0 0 1-1.9 5.4l-.1.1a8.5 8.5 0 0 1-5.8 2.6 8.38 8.38 0 0 1-7.5-4.3A8.5 8.5 0 0 1 9 4.5c1.6-.2 3.2.2 4.6 1.2a1 1 0 0 1 .5.9v1.2c0 .5-.3.9-.8 1.1l-.6.2a1 1 0 0 0-.6.9v1.1c0 .6.5 1 1 1h.6c2.2 0 4.3.9 5.8 2.5.4.4.8.9 1.1 1.4z" />
 					<path d="M17.5 12.2c-.2-.1-1.2-.6-1.4-.7-.2-.1-.4-.1-.6 0-.2.1-.5.3-.8.5-.3.2-.6.2-.9.1-.3-.1-.8-.3-1.4-.9-.5-.5-.9-1.1-1-1.4-.1-.3 0-.6.1-.8.1-.2.3-.4.4-.5.1-.1.2-.2.3-.4.1-.1.1-.3 0-.4-.1-.1-.4-.5-.7-.8-.2-.2-.5-.3-.8-.2-.3.1-.9.4-1.4.9-.5.5-1 1.1-1 1.9s.6 1.7 1.6 2.6 1.9 1.7 3.1 2.2c1.2.5 2.4.8 3.4.8.8 0 1.4-.1 1.8-.3.4-.2.7-.6.8-1 .2-.6.1-1.2-.2-1.6-.2-.3-.6-.6-1-.9z" />
 				</svg>
 			</a>
 		</div>
 		<div class="watermark">&copy; {today.getFullYear()} Massoud. All rights reserved.</div>
 	</div>
</footer>
<MinimalRotatingB />
<style>
	footer {
		padding: .75rem 1rem .75rem 1rem;
		background: var(--panel);
		color: var(--text-65);
		text-align: center;
		border-top: 1px solid var(--border);
		font-family: Inter, "Atkinson", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
	}
	.footer-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
	}
	.watermark {
		font-size: 0.95rem;
		color: var(--text-65);
		margin-bottom: 0rem;
		white-space: nowrap;
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 1.25rem;
		align-items: center;
	}
	.footer-links a {
		color: var(--text-65);
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0;
		width: 20px;
		height: 20px;
		line-height: 1;
		transition: opacity 120ms ease;
	}
	.footer-links a svg {
		display: block;
		width: 18px;
		height: 18px;
		stroke: currentColor;
		fill: none;
	}
	.footer-links a:hover { opacity: 0.8; }

	@media (max-width: 720px) {
		footer {
			padding: .5rem .5rem .5rem .5rem;
		}
		.footer-inner {
			gap: 0.5rem;
			justify-content: flex-start;
			white-space: nowrap;
		}
		.footer-links {
			gap: 0.5rem;
			order: 1;
		}
		.watermark {
			font-size: 0.88rem;
			order: 0;
			margin-right: 0.5rem;
		}
	}
</style>
