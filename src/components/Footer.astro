---
const today = new Date();
---

<footer>
	<div style="display: flex; justify-content: space-between; align-items: center; gap: 1rem;">
		<div class="footer-links">
			<a href="https://instagram.com/" target="_blank" rel="noopener">Instagram</a>
			<a href="#" rel="noopener">WhatsApp Group</a>
		</div>
		<div class="watermark">&copy; {today.getFullYear()} Massoud. All rights reserved</div>
	</div>
</footer>
<style>
	footer {
		padding: .75rem 1rem .75rem 1rem;
		background: white;
		color: rgba(var(--gray-dark), 0.65);
		text-align: center;
		border-top: 1px solid rgb(var(--gray-light));
		font-family: Inter, "Atkinson", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
	}
	.watermark {
		font-size: 0.95rem;
		color: rgba(var(--gray-dark), 0.6);
		margin-bottom: 0rem;
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 1.25rem;
		align-items: center;
	}
	.footer-links a {
		color: rgba(var(--gray-dark), 0.55);
		text-decoration: none;
		padding: 0.25rem 0;
		position: relative;
		font-size: 0.98rem;
	}
	.footer-links a::after {
		content: '';
		position: absolute;
		left: 0;
		bottom: -2px;
		height: 1px;
		width: 0;
		background: rgba(var(--gray-dark), 0.45);
		transition: width 160ms ease;
	}
	.footer-links a:hover::after {
		width: 100%;
	}

	@media (max-width: 720px) {
		footer {
			padding: 1.25rem 0.75rem 2rem 0.75rem;
		}
		.footer-links {
			flex-direction: row;
			gap: 0.9rem;
			flex-wrap: wrap;
		}
		.watermark {
			font-size: 0.9rem;
		}
	}
</style>
