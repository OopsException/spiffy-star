---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import SendViaWallet from '../components/SendViaWallet.astro';
import { SOL, ETH, BTC, MATIC } from '../consts';

type Props = CollectionEntry<'blog'>['data'];

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	chain: rawChain,
} = Astro.props as any;

const chain = String(rawChain || '').toLowerCase();

const walletAddress =
	chain === 'sol'
		? SOL
		: chain === 'eth'
		? ETH
		: chain === 'matic'
		? MATIC
		: chain === 'btc'
		? BTC
		: '';
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero {
				display: block;
			}
			/* Cover image constrained to content width (match .prose) */
			.hero-image {
				max-width: 720px; /* match prose width */
				margin: 0 auto;
				overflow: hidden;
				border-radius: 10px;
			}
			.hero-image img.image {
				display: block;
				width: 100%;
				/* Use intrinsic height to preserve image aspect ratio and avoid forced cropping */
				height: auto;
				object-fit: cover;
				object-position: center;
				border-radius: 10px;
				box-shadow: none;
			}
			/* Remove forced fixed heights on mobile so the image scales naturally */
			@media (max-width: 720px) {
				.hero-image img { height: auto; }
			}

			/* Clean header block directly under the cover image */
			.hero-header {
				max-width: 720px;
				margin: 0.6rem auto 1rem;
				padding: 0 1rem;
				text-align: left;
			}
			.hero-title {
				margin: 0;
				font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
				font-weight: 700;
				font-size: clamp(1.5rem, 3.2vw, 2rem);
				line-height: 1.05;
				color: var(--text-85);
			}
			.hero-date {
				margin-top: 0.25rem;
				color: var(--text-65);
				font-size: 0.95rem;
				font-weight: 300;
			}
			.hero-divider {
				margin-top: 0.75rem;
				border: none;
				height: 1px;
				background: var(--border);
			}
			/* Content column: keep a comfortable measure for reading while
			   allowing the area to be wider and more fluid on small screens. */
			.prose {
				/* prefer an upper bound of ~70 characters for readability */
				width: 720px;
				max-width: min(70ch, calc(100% - 2em));
				margin: 0 auto;
				padding: 1em;
				color: var(--text-85);
			}

			/* Paragraph typography: airy, editorial rhythm */
			.prose p {
				line-height: 1.75;
				margin-bottom: 1.4rem;
				max-width: 70ch; /* soft cap to keep characters-per-line comfortable */
				/* Justified, editorial paragraph rhythm */
				text-align: justify;
				text-justify: inter-word;
				hyphens: auto;
				-webkit-hyphens: auto;
				-ms-hyphens: auto;
				text-wrap: pretty;
				overflow-wrap: break-word;
			}

			/* Send via wallet container (visible below article, before footer) */
			.send-via {
				max-width: 720px;
				margin: 1.75rem auto;
				padding: 0 1rem;
			}
			.send-via h3 {
				margin: 0 0 0.5rem 0;
				color: var(--text-85);
				font-size: 1rem;
				font-weight: 600;
			}

			.prose h1,
			.prose h2,
			.prose h3,
			.prose h4,
			.prose h5,
			.prose h6 {
				/* Keep headings using existing typography; ensure they don't inherit the paragraph measure */
				max-width: none;
			}
			.last-updated-on {
				font-style: italic;
			}

			/* Minor responsive adjustments */
			@media (max-width: 720px) {
				.hero-image { border-radius: 10px; }
				.hero-title { font-size: 1.15rem; }

				/* Make the content column more fluid on smaller devices while
				   keeping balanced margins. Increase width slightly (~1.2x feel).
				*/
				.prose {
					width: calc(100% - 1.5rem);
					max-width: 96%;
					padding: 0.9rem;
				}

				/* Make the title/header sit flush with the image edge on mobile */
				.hero-header {
					padding-left: 0;
					padding-right: 0;
					/* tighten top spacing a bit so header hugs the image */
					margin: 0.35rem auto 1rem;
				}
			}

			/* Extra small screens: allow the prose column to use up to 92% width
			   so reading feels natural without harsh gutters. */
			@media (max-width: 430px) {
				.prose {
					width: 96%;
					max-width: 96%;
					padding: 0.6rem;
				}


				.send-via {
					max-width: 720px;
					margin: 1.5rem auto;
					padding: 0 1rem;
				}
				.send-via h3 {
					margin: 0 0 0.5rem 0;
					color: var(--text-85);
					font-size: 1rem;
					font-weight: 600;
				}
				.prose p {
					/* remove the soft max-width so paragraphs can flow naturally */
					max-width: none;
				}
			}


		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<section class="hero">
					<div class="hero-image">
						{heroImage && <Image class="image image--cover" width={1440} height={720} src={heroImage} alt="" />}
					</div>
					<div class="hero-header">
						<h1 class="hero-title">{title}</h1>
						<div class="hero-date">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<div class="last-updated-on">Last updated on <FormattedDate date={updatedDate} /></div>
							)}
						</div>
						<hr class="hero-divider" />
					</div>
				</section>
				<div class="prose">
					<slot />
				</div>
			</article>
			</main>

			{walletAddress ? (
				<section class="send-via" aria-label="Send directly from your wallet">
					<h3>Send directly from your wallet</h3>
					<SendViaWallet chain={chain} address={walletAddress} />
				</section>
			) : null}
			<Footer />
	</body>
</html>
